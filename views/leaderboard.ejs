<%- include("layout/header", {loggedIn ,gender, username, life}) %>

<main class="colorbg-purple">
  <section id="leaderboard" class="pv-60 ">
    <div class="container">
      <div class="mb-20">


        <a id="button-back"  class="color-white flex" href="/">
        <i class="fas fa-arrow-circle-left"></i>
        </a>
      </div>
      <h2 class="color-white">Leaderboard</h2>
      <div class="leaderboard limit col-5">
        <ul class="mt-20">
           <% userAll.forEach(function(user, index){ %>
             <% index++ %>
             <li style="background-color:<%=username === user.username ? "#5e20f1" : null %>;"  class='colorbg-violet p-10 flex h-space-between'>
               <div class="flex v-center">
                 <span class='color-white'><%= index %>.</span>
                 <img class='mh-10' src='/images/<%= user.gender %>.png'>
                <span class="color-white"><%= user.username %></span>


               </div>

               <div class="flex v-center">
                 <span class="color-white"><%= user.games > 1 ?  `${user.games} games` : `${user.games} game`%></span>
                 <span class="color-white ml-20"><%= user.points %> points</span>
               </div>
            </li>
           <% }) %>
           <% if (userAll.length < 6) { %>
             <%for (var i =0; i < 7 - userAll.length ; i++){ %>
               <li class='leaderboard-placeholder colorbg-violet '>
              </li>
             <%}%>
           <%}%>


        </ul>



    </div>
  </section>
</main>
<%- include("layout/footer", {renderGlider:false, replenishDate}) %>
