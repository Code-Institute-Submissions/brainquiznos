<%- include('layout/header') %>
<main>
  <section id="signup" class="colorbg-purple pv-40">
    <div class="container">
      <div class="text-center">
        <h1 class="color-white">Signup now</h1>
        <p class='title-sub color-white mt-10'>Create an account and start playing for free.</p>
      </div>
      <div class="row h-center">
        <div class="col-4">
          <form class="form mt-20" action="/user/signup" method="post">
            <label class='mt-10 color-white' for="username">Username</label>
            <input class='mt-10' id='username' type="text" name="username" placeholder="johnDoe31">

            <label class='mt-10 color-white' for="email">Email</label>
            <input class='mt-10' id='email' type="email" name="email" placeholder="example@example.com">

            <label class='mt-10 color-white' for="password">Password</label>
            <input class='mt-10' id='password' type="password" name="password" placeholder="Password">

            <label class='mt-10 color-white' for="password2">Confirm password</label>
            <input class='mt-10' id='password2' type="password" name="password2" placeholder="Confirm password">

            <label class='mt-10 color-white' for="gender">Gender</label>
            <div class="flex">
              <div class="flex v-center">
                <input class="mr-10 " type="radio" name="gender" value="male" required>
                <span class="color-white ">Male</span>
              </div>
              <div class="flex v-center">
                <input class="mr-10 ml-20" type="radio" name="gender" value="female" required><span
                    class="color-white">Female</span>
              </div>
              <div class="flex v-center">
                <input class="mr-10 ml-20" type="radio" name="gender" value="other" required><span
                    class="color-white">Other</span>
              </div>



            </div>

            <input class='button-1 colorbg-pink mt-30' type="submit" value="Sign up">
          </form>
        </div>


      </div>
    </div>
  </section>
</main>
<%- include('layout/footer') %>
